# ── Core ──────────────────────────────────────────────────────────────────────
ANTHROPIC_API_KEY=           # Required for AI agent planning
DATABASE_URL=sqlite+aiosqlite:///./travel_agent.db
USE_REAL_APIS=false          # Set to true to use real booking APIs
APPROVAL_TIMEOUT_MINUTES=30
MAX_AGENT_ITERATIONS=10
LOG_LEVEL=INFO

# ── Real API Providers (required when USE_REAL_APIS=true) ─────────────────────
AMADEUS_CLIENT_ID=
AMADEUS_CLIENT_SECRET=
AMADEUS_HOSTNAME=test.api.amadeus.com
BOOKINGCOM_API_KEY=
RAILEUROPE_API_KEY=
HERTZ_CLIENT_ID=
HERTZ_CLIENT_SECRET=
VIATOR_API_KEY=

# ── Authentication (M6) ──────────────────────────────────────────────────────
